@model ClotherShop.Models.MemberModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    <link href="~/Assets/css/stylelogin.css" rel="stylesheet" />

</head>
<style>
    .header-bottom {
        display: block !important;
        font-size: 25px;
        line-height: 60px;
    }
</style>
<body>
    <div class="cover"></div>
    <div class="header">
        <!--Header-top-->
        @if (@Session["Member"] == null)
        {
            @Html.Partial("_Header")
        }
        else
        {
            @Html.Partial("_HeaderMember")
        }
        <!--End Header-top-->
        <div class="header-bottom">
            <span class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img alt="Logo" src="~/Assets/img/logo.jpg" />
                </a>
                <span>||Đăng nhập</span>
            </span>
        </div>
    </div>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main style="margin-top:12vw">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    @using (@Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @placeholder = "name@example.com", @autofocus = "autofocus" })
                                            <label for="inputEmail">Email address</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                                            <label for="inputPassword">Password</label>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                            <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="password.html">Forgot Password?</a>
                                            <button text="submit" class="btn btn-primary">Login</button>
                                        </div>
                                    }

                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="js/scripts.js"></script>
</body>
</html>
